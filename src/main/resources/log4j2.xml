<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd/MM/yy - HH:mm:ss.SSS} [%t] [%-5level] [%logger{36}] - %msg%n"/>
        </Console>
        <File name="fileAp" fileName="server.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="co.edu.javeriana.aes.pica.controllers" level="all" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="fileAp"/>
        </Logger>
        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>